<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_m"
    android:paddingRight="@dimen/margin_m"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/musicbar_picture"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="大约在冬季"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_l" />

        <TextView
            android:id="@+id/musicbar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="齐秦"
            android:layout_marginTop="@dimen/margin_s"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_s" />

    </LinearLayout>

    <ImageView
        android:id="@+id/musicbar_play"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginLeft="@dimen/margin_m"
        android:padding="@dimen/margin_m"
        android:src="@drawable/icon_media_play" />

</LinearLayout>