<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_mode"
        style="?android:buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_none"
        android:text="@string/music_player_mode_cycle"
        app:layout_constraintBottom_toBottomOf="@+id/ib_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ib_close" />

    <ImageButton
        android:id="@+id/ib_close"
        style="?android:imageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/action_close"
        android:src="@drawable/ic_music_player_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/dimen_none"
        android:layout_height="@dimen/dimen_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_close" />
</android.support.constraint.ConstraintLayout>