<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imageButtonStyle">@style/AppTheme.ImageButton</item>

        <!-- Dialog attributes -->
        <item name="dialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ripple_background</item>
        <item name="android:minWidth">@dimen/image_button_min</item>
        <item name="android:minHeight">@dimen/image_button_min</item>
    </style>

    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/ripple_background</item>
        <item name="android:minWidth">@dimen/image_button_min</item>
        <item name="android:minHeight">@dimen/image_button_min</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/background_music_list_dialog</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation.Dialog</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">65%</item>
        <item name="windowFixedHeightMinor">65%</item>
    </style>

    <style name="AppTheme.Animation.Dialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

</resources>
